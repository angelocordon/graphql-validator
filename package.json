{
  "name": "@creditkarma/graphql-validator",
  "version": "0.1.3",
  "description": "Validate queries agains a GraphQL Schema",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rimraf coverage/ dist/ node_modules/ typings/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tslint src/**/*",
    "pretest": "npm run build",
    "test": "npm run test:only --",
    "test:watch": "npm test -- -w",
    "test:only": "mocha --reporter spec --full-trace ./dist/test/tests.js",
    "coverage": "istanbul cover _mocha -- --full-trace ./dist/test/tests.js",
    "postcoverage": "remap-istanbul --input coverage/coverage.raw.json --type lcovonly --output coverage/lcov.info"
  },
  "bin": {
    "graphql-validator": "./bin/query-validator.js"
  },
  "keywords": [
    "GraphQL"
  ],
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "devDependencies": {
    "@creditkarma/graphql-loader": "^0.1.3",
    "@types/chai": "^3.4.34",
    "@types/glob": "^5.0.30",
    "@types/mkdirp": "^0.3.29",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.46",
    "@types/rimraf": "0.0.28",
    "chai": "^3.5.0",
    "istanbul": "1.1.0-alpha.1",
    "mkdirp": "^0.5.1",
    "mocha": "^2.5.3",
    "remap-istanbul": "^0.5.1",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.4.0",
    "tslint": "^3.13.0",
    "typed-graphql": "^1.0.2",
    "typescript": "^2.0.0"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "glob": "^7.0.5",
    "graphql": "^0.6.1 || ^0.7.0",
    "graphql-tools": "^0.8.0"
  },
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}
